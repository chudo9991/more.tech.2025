# Тестовая конфигурация Caddy для локального тестирования
:80 {
    # API routes - proxy to orchestrator backend
    handle /api/* {
        reverse_proxy orchestrator:8000
    }
    
    # All other routes - proxy to frontend
    handle /* {
        reverse_proxy frontend:3000
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        # Prevent clickjacking
        X-Frame-Options "DENY"
        
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        
        # XSS protection
        X-XSS-Protection "1; mode=block"
        
        # Remove server header
        -Server
    }
    
    # Logging disabled to avoid format issues
}