# Database
DB_PASSWORD=interview_pass_secure

# MinIO Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# SIP Provider (Mango/Zadarma)
SIP_PROVIDER_URL=https://api.mango-office.ru
SIP_API_KEY=your_sip_api_key_here
SIP_SECRET=your_sip_secret_here

# Service URLs
ORCHESTRATOR_URL=http://localhost:8000
STT_SERVICE_URL=http://localhost:8001
TTS_SERVICE_URL=http://localhost:8002
SCORING_SERVICE_URL=http://localhost:8003
FRONTEND_URL=http://localhost:3000

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Audio Processing
AUDIO_TTL_DAYS=30
MAX_AUDIO_DURATION_SECONDS=300
VAD_SILENCE_THRESHOLD_MS=1800
VAD_TIMEOUT_SECONDS=60

# LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_PARALINGUISTICS=false
ENABLE_TONE_ANALYSIS=true
ENABLE_AUDIO_CACHE=true
