# Production Environment Variables
# Copy this file to .env.prod and fill in your values

# Docker Registry and Image Configuration
REGISTRY=ghcr.io
IMAGE_NAME=your-username/more.tech.2025
TAG=latest

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# MinIO Configuration
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secure_minio_password_here
MINIO_BUCKET_NAME=audio-files

# Optional: Custom ports (if needed)
# ORCHESTRATOR_PORT=8000
# STT_PORT=8001
# LLM_PORT=8004
# AVATAR_PORT=8005
# SCORING_PORT=8003
# FRONTEND_PORT=3000
# MINIO_PORT=9000
# MINIO_CONSOLE_PORT=9001
